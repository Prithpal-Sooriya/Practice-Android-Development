<menu xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity">
    <!--
    item id = id that program can call this UI
    item orderInCategory = the order of the items to be displayed
    item title = name given in the UI
    item showAsAction = if the item should be shown in the action bar or the overflow menu
        "never" = never be in the action bar (therefore will always be in in the overflow menu)
    -->
    <item
        android:id="@+id/action_settings"
        android:orderInCategory="100"
        android:title="@string/action_settings"
        app:showAsAction="never" />
</menu>